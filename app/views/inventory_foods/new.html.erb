<div class="container">
  <div class="inventories__top">
    <h1 class="inventories__title">Add Food to <%= @inventory.name %> </h1>
    <%= link_to 'Back to Inventory', inventory_path(@inventory) , class:"btn btn--danger" %>
  </div>
  <%= form_for [@inventory, @inventory_food], class:"inventories__form" do |f| %>
    <div class="inventories__form-group">
      <%= f.label :food_id, class:"inventories__form-label" %>
      <%= f.collection_select :food_id, Food.all, :id, :name %>
    </div>
    <div class="inventories__form-group">
      <%= f.label :quantity, class:"inventories__form-label" %>
      <%= f.text_field :quantity %>
    </div>
    <div class="actions">
      <%= f.submit 'Add Food' %>
    </div>
  <% end %>
</div>
